# 1. Use Alpine Linux for minimal size
FROM --platform=linux/amd64 python:3.10-alpine

# 2. Set Working Directory
WORKDIR /app

# 3. Install system dependencies and Python packages in one optimized layer
RUN apk add --no-cache --virtual .build-deps \
    gcc \
    musl-dev \
    freetype-dev \
    g++ \
    && apk add --no-cache freetype \
    && pip install --no-cache-dir --no-compile PyMuPDF \
    && find /usr/local -name "*.pyc" -delete \
    && find /usr/local -name "__pycache__" -type d -exec rm -rf {} + \
    && apk del .build-deps \
    && apk add --no-cache libstdc++ \
    && rm -rf /var/cache/apk/* \
    && rm -rf /root/.cache/pip/* \
    && rm -rf /tmp/*

# 4. Copy Application Code
COPY pdf_process.py .

# 5. Create necessary directories
RUN mkdir -p inputs outputs

# 6. Set Execution Command
CMD ["python", "pdf_process.py"]
